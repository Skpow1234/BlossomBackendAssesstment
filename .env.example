# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=blossom
DB_DIALECT=mysql

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h

# Rick and Morty API
RICK_AND_MORTY_API_URL=https://rickandmortyapi.com/api

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Cache Configuration
CACHE_TTL=3600 # 1 hour in seconds
CACHE_ENABLED=true

# Character Synchronization
SYNC_INTERVAL=43200000 # 12 hours in milliseconds
SYNC_ENABLED=true 